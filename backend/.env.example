# ========================================
# Google Analysis Platform - 环境配置模板
# ========================================
# 复制此文件为 .env 并填写实际值
# 生成密钥: python3 -c "import secrets; print(secrets.token_urlsafe(48))"

# ===== 环境配置 =====
ENVIRONMENT=development

# ===== JWT 配置（必填，启动时校验） =====
SECRET_KEY=<替换为随机密钥>
REFRESH_SECRET_KEY=<替换为另一个随机密钥>
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===== Cookie 配置 =====
COOKIE_SECURE=True
COOKIE_SAMESITE=lax

# ===== 数据库 =====
DATABASE_URL=sqlite:///./google_analysis.db

# ===== Google Ads API =====
GOOGLE_ADS_SHARED_DEVELOPER_TOKEN=
GOOGLE_ADS_SERVICE_ACCOUNT_FILE=

# ===== AI 配置（可选） =====
GEMINI_API_KEY=
CLAUDE_API_KEY=

# ===== GitHub（露出发布） =====
GITHUB_TOKEN=
